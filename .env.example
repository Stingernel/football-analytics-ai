# LLM Provider: "openai" or "ollama"
LLM_PROVIDER=ollama

# OpenAI Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Ollama Configuration (if LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database
DATABASE_URL=sqlite:///./football_analytics.db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Settings
STREAMLIT_PORT=8501

# Model Settings
ENSEMBLE_XGB_WEIGHT=0.6
ENSEMBLE_LSTM_WEIGHT=0.4

# The Odds API (for auto-prediction)
# Get free API key at https://the-odds-api.com
ODDS_API_KEY=your-api-key-here
